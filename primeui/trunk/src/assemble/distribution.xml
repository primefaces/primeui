<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <files>
        <file>
            <source>${basedir}/src/main/resources/LICENSE.txt</source> 
            <outputDirectory>/</outputDirectory> 
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/primeui</directory>
            <outputDirectory>/development</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/primeui/development</directory>
            <outputDirectory>/development</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/primeui/production</directory>
            <outputDirectory>/production</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/primeui/images</directory>
            <outputDirectory>/production/images</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/themes</directory>
            <outputDirectory>/themes</outputDirectory>
        </fileSet>
    </fileSets>
    
</assembly>